-- Obter os resultados das partidas em uma tabela formatada, incluindo o resultado final (Vit贸ria em Casa, Vit贸ria Fora, Empate)

SELECT 

    home_team_id, 

    away_team_id, 

    home_score, 

    away_score, 

    CASE 

        WHEN home_score &gt; away_score THEN 'Vit贸ria em Casa'

        WHEN home_score &lt; away_score THEN 'Vit贸ria Fora'

        ELSE 'Empate'

    END AS resultado

FROM fixtures;